schema {
    query: Query,
    mutation: Mutation
}

type Query {
    clinicById(id: ID): Clinic
    patientById(id: ID): Patient
    staffById(id: ID): Staff
    staffRoleById(id: ID): StaffRole
}

type Mutation {
    createStaff(form: CreateStaffForm): Staff
    invitedStaff(form: InviteStaffFullForm): Boolean
    invitedStaffOnlyEmail(form: InviteStaffShortForm): Boolean
}

type ErrorMessage {
    key: String
    value: String
}

scalar Date
